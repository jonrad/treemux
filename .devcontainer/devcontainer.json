{
  "name": "Claude Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Los_Angeles}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW"
  ],
  "customizations": {
  },
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-credentials-shared,target=/home/node/.claude-creds,type=volume"
  ],
  "postStartCommand": "[ -f /home/node/.claude-creds/.credentials.json ] && mkdir -p /home/node/.claude && cp /home/node/.claude-creds/.credentials.json /home/node/.claude/ || true",
  "postAttachCommand": "[ -f /home/node/.claude/.credentials.json ] && cp /home/node/.claude/.credentials.json /home/node/.claude-creds/ || true",
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "waitFor": "postStartCommand"
}
